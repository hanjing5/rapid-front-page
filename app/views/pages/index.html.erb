      <%= f.text_field :email, :placeholder=>'test@example.com', :style=>'font-size:2em;height:2em;width:15em' %> 
      <button id='subscribe_button' class="btn btn-primary btn-large" 
					style='opacity:1.0;height:2.4em;font-size:2em;vertical-align:top;' onclick="$(this).button('loading')" data-loading-text='saving...'>Join Beta</button>
	</div>
    <% end %>
  </p>
